# Event Sink Filter - Environment Variables Example
# Copy this file to .env and fill in your values
#
# ====================================================================
# Required Configuration
# ====================================================================

# Required: Full API endpoint URL
export FILTER_API_ENDPOINT="https://api.plainsight.ai/filter-pipelines/your-pipeline/events?project=your-project-uuid"

# Required: API token
export FILTER_API_TOKEN="ps_your_token_here"

# Optional: Custom HTTP headers
export FILTER_API_CUSTOM_HEADERS="X-Scope-OrgID: your-org-id"

# ====================================================================
# Optional Configuration (applies to both local and docker)
# ====================================================================

# Topics to collect (comma-separated, default: "*" = all)
# export FILTER_EVENT_TOPICS="detections,alerts"

# Flush interval in seconds (default: 5.0)
# export FILTER_FLUSH_INTERVAL_SECONDS="5.0"

# Max events per batch (default: 200)
# export FILTER_MAX_BATCH_EVENTS="200"

# Enable gzip compression (default: true)
# export FILTER_ENABLE_GZIP="true"

# Log level
# export LOG_LEVEL="INFO"
